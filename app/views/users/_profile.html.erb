<div class="profile-panel panel panel--1 js-active">
  <i class="profile-panel__action-button material-icons">edit</i>
  <%= image_tag('users/128.jpg', :alt => "User", :class => "profile-panel__picture") %>
  <hgroup class="profile-panel__titles">
    <h2 class="profile-panel__name"><%= user.first_name %> <%= user.last_name %></h2>
    <h3 class="profile-panel__job"><%= user.position %></h3>
    <h4 class="profile-panel__org"><%= user.organization %></h4>  
  </hgroup>
  <section class="profile-panel__credentials">
    <div class="row">
      <div class="medium-6 small-12 column">
        <p class="profile-panel__domains">Domains of Expertise Paruptiae latius peditatest aut maiorro eossi ini dolorrumqui deliqui demperum aspid magnatiunt</p>    
      </div>
      <div class="medium-6 small-12 column">
        <p class="profile-panel__location"><%= user.city %>, <%= user.country %></p>
        <ul class="profile-panel__lang">
          <li class="">English</li>
          <li class="">Spanish</li>
          <li class="">French</li>
        </ul>
      </div>
    </div>
  </section>
  <div class="profile-panel__projects-button">Projects <i class="material-icons js-open-panel-2">arrow_forward</i></div>
  <div class="profile-panel__events-button">Events <i class="material-icons js-open-panel-2">arrow_forward</i></div>
  <section class="profile-panel__expertise-panel">
    <h5 class="profile-panel__expertise-panel-title">Expertise <i class="material-icons js-open-panel-2">arrow_forward</i></h5>
  </section>
</div>