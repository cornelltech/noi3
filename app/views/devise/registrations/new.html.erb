<% set_page_flags('devise') %>
<div class="login-wrapper">
  <div class="login-form">
  
  <% if params["source"] == "omniauth"%> 
     <%= render 'devise/registrations/omniauth_registration' %>
  <% else %> 

    <h4>Sign up</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>
    <% flash.each do |key, value| %>
       <div class="flash <%= key %>"><%= value %></div>
    <% end %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.text_field :first_name, autofocus: true, placeholder: "First Name" %>
    </div>

    <div class="field">
      <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name" %>
    </div>

    <div class="field">
      <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button button--full button--main-color" %>
    </div>
    <% end %>

    <div class="login-links">
      <%= render 'devise/shared/full_links' %>
    </div>
  <% end %>
  </div>
</div>
