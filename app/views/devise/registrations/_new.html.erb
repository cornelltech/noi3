<div class="signup-panel panel panel--1">

  <h2 class="signup-panel__heading signup-panel__content">Sign Up/Register</h2>
  <p class="signup-panel__content">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque voluptatum, excepturi assumenda accusantium?</p>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :remote => true) do |f| %>
  <%= devise_error_messages! %>

  <div class="form form--negative signup-panel__content signup-panel__form">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    <%= f.text_field :first_name, placeholder: 'First Name' %>
    <%= f.text_field :last_name, placeholder: 'Last Name' %>
    <%= f.text_field :username, placeholder: 'Username' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm your password' %>
    <%= f.button "Sign up", class: 'button button--full button--main-color' %>
  </div>

  <% end %>
  <%= render "devise/shared/links" %>
</div>