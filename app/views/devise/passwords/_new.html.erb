<div class="signup-panel panel panel--1">
<h2 class="signup-panel__heading signup-panel__content">Reset your Password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form form--negative signup-panel__content signup-panel__form">

      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      <%= f.submit "Send reset instructions", class: 'button button--full button--main-color' %>

  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>